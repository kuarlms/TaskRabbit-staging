<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/listBg"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingHorizontal="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView_adp_act_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_marginTop="5dp"
                    android:text="$ 00"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/red"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="Michael"
                    fontPath="fonts/Montserrat-SemiBold.ttf"
                    android:textColor="#ff5b61"
                    android:textSize="13dp"
                    />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:text="for cleaning"
                    android:textColor="#666666"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textSize="11dp"
                     />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView44"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44"
                    android:text="(23 Jun - Flexible time)"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textColor="#898989"
                    android:layout_marginTop="16dp"
                    android:textSize="10dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:layout_alignParentTop="true">
                    <Button
                    android:id="@+id/button13"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_flexible"
                    android:text="00"
                    android:lines="1"
                        fontPath="fonts/Montserrat-Light.ttf"
                    android:maxLines="2"
                        android:padding="5dp"
                        android:textSize="10sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:padding="5dp"
                        android:background="@drawable/button_flexible1"
                        android:text="Flexiable"
                        android:id="@+id/tv_thp_time"
                        android:gravity="center"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:textColor="@color/Black_nb"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/imageView10"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER TASk HOURS" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00 hrs"
                            android:layout_margin="2dp"
                            android:inputType="numberDecimal"
                            android:id="@+id/et_active_task_hours"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button10_taskDone"
                        style="@style/done"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linearLayout13"
                        android:layout_gravity="right"
                        android:layout_toEndOf="@+id/button11"
                        android:layout_toRightOf="@+id/button11"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="Task Done"
                        android:textAllCaps="true"
                        android:textColor="#f9f9f5" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/textView_adp_act_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"></FrameLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>
