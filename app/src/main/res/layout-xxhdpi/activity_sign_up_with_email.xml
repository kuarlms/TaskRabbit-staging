<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include layout="@layout/toolbar_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_normal"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_normal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="15dp">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Email" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:layout_below="@+id/textView13"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="11dp"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:text="First Name" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:text="Last Name" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:layout_alignRight="@+id/editText2"
        android:layout_below="@+id/textView17"
        android:ems="10"
        android:inputType="textPersonName"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:layout_below="@+id/editText_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:inputType="phone"
        android:layout_below="@+id/textView32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textColor="@color/labelcolor"
        android:text="Zipcode"
        android:layout_below="@+id/editText_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        fontPath="fonts/Montserrat-Regular.ttf"
        android:textSize="14sp"
        android:layout_below="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText7"
        android:layout_alignRight="@+id/editText7"
        android:layout_below="@+id/editText7"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="54dp"
        android:textColor="@color/white"
        style="@style/signup_with_email"
        fontPath="fonts/Montserrat-SemiBold.ttf"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:text="Create Account " />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        fontPath="fonts/Montserrat-Light.ttf"
        android:textSize="12sp"
        android:layout_below="@+id/button9"
        android:layout_marginTop="35dp"
        android:text="@string/sign_up_text2" />

</RelativeLayout>
    </ScrollView>

</RelativeLayout>
