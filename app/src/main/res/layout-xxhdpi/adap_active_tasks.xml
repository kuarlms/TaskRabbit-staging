<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/listBg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="8dp"
                    android:layout_alignStart="@+id/linearLayout2"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView_adp_act_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_marginTop="5dp"
                    android:text="$ 00"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/red"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/button13"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="Michael"
                    fontPath="fonts/Montserrat-SemiBold.ttf"
                    android:textColor="#ff5b61"
                    android:textSize="16dp"
                     />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:text="for cleaning"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    fontPath="fonts/Montserrat-Regular.ttf"
                     />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView44"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44"
                    android:text="(23 Jun - Flexible time)"
                    android:textColor="#666666"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textSize="12dp" />

                <Button

                    android:id="@+id/button13"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_cancel"
                    android:text="Chat "
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/red" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/imageView10"
                    android:padding="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:id="@+id/linearLayout2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            fontPath="fonts/Montserrat-Regular.ttf"
                            android:textSize="14dp"
                            android:text="Enter Task Hours" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00 Hrs"
                            fontPath="fonts/Montserrat-Regular.ttf"
                            android:layout_margin="2dp"
                            android:textSize="16dp"
                            android:paddingBottom="15dp"
                            android:inputType="numberDecimal"
                            android:id="@+id/et_active_task_hours"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/button10_taskDone"
                        style="@style/done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout13"
                        android:layout_gravity="right"
                        android:layout_toEndOf="@+id/button11"
                        android:layout_toRightOf="@+id/button11"

                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"

                        android:text="Task Done"
                        android:textSize="15dp"
                        fontPath="fonts/Montserrat-SemiBold.ttf"
                        android:textAllCaps="false"

                        android:textColor="#f9f9f5" />
                </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/textView_adp_act_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"></FrameLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>
