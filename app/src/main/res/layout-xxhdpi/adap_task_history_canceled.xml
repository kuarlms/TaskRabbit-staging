<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/listBg"
    android:layout_marginVertical="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingHorizontal="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView_adp_act_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView10"
                    android:layout_marginTop="5dp"
                    android:text="$ 00"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/red"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textView43"
                    fontPath="fonts/Montserrat-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="Michael"
                    android:textColor="#ff5b61"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:text="for cleaning"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textColor="#666666"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView10"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44"
                    android:text="(23 Jun - Flexible time)"
                    android:textColor="#898989"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <Button

                        android:id="@+id/button13"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:background="@drawable/button_flexible"
                        android:lines="2"
                        android:maxLines="2"
                        android:textSize="10sp"
                        android:padding="5dp"
                        android:text="00"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_thp_time"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_flexible1"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Flexiable"
                        android:textColor="@color/Black_nb"
                        android:textSize="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/textView44"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:layout_marginTop="5sp"
                    android:paddingBottom="0dp"
                    android:visibility="visible">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:visibility="gone"></FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:padding="0dp"

                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER TASk HOURS" />

                        <EditText
                            android:id="@+id/et_active_task_hours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:hint="00 hrs"
                            android:inputType="numberDecimal"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button10_taskDone"
                        android:layout_width="75dp"
                        android:layout_height="23dp"
                        android:layout_below="@+id/linearLayout13"
                        android:layout_gravity="center"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:background="@drawable/button_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="0dp"
                        android:text="Cancelled"
                        android:textSize="11dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/textView_adp_act_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:visibility="gone"></FrameLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>
