<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/listBg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:elevation="6dp"
                android:paddingHorizontal="4dp"
                android:paddingVertical="15sp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textView_adp_act_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:drawableLeft="@drawable/button_signup_login"
                    android:text="location"
                    android:textSize="14sp"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textcolor1"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Montserrat-SemiBold.ttf"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="Michael"
                    android:textColor="#ff5b61"
                    android:textSize="16dp"
                     />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView43"
                    android:layout_alignStart="@+id/textView43"
                    android:layout_below="@+id/textView43"
                    android:text="for cleaning"
                    android:textColor="@color/textcolor1"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textSize="14dp"
                     />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView44"
                    android:layout_alignLeft="@+id/textView44"
                    android:layout_alignStart="@+id/textView44"
                    android:text="(23 Jun - Flexible time)"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="26sp"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:textColor="@color/textcolor1"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">
                <Button

                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text=""
                    android:lines="1"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:textAllCaps="true"
                    fontPath="fonts/Montserrat-Bold.ttf"
                    android:textColor="@color/Black_nb" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:text="Flexiable"
                        fontPath="fonts/Montserrat-Regular.ttf"
                        android:id="@+id/tv_thp_time"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textColor="@color/textcolor1"/>


                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@id/imageView10"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_margin="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER TASk HOURS" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00 hrs"
                            android:layout_margin="2dp"
                            android:inputType="numberDecimal"
                            android:id="@+id/et_active_task_hours"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button10_taskDone"
                        style="@style/done"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linearLayout13"
                        android:layout_gravity="right"
                        android:layout_toEndOf="@+id/button11"
                        android:layout_toRightOf="@+id/button11"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="Task Done"
                        android:textAllCaps="true"
                        android:textColor="#f9f9f5" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/textView_adp_act_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"></FrameLayout>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    fontPath="fonts/Montserrat-Regular.ttf"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor1"
                    android:layout_alignLeft="@+id/textView_adp_act_cost"
                    android:layout_alignStart="@+id/textView_adp_act_cost"
                    android:layout_below="@+id/textView_adp_act_cost"
                    android:text="vehicle" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>
