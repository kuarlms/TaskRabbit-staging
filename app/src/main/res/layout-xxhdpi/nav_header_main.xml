<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="20"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">

    </FrameLayout>

    <include
        android:id="@+id/tb_task"
        layout="@layout/toolbar_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/activity_vertical_margin">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_nb_pro_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:id="@+id/textView_nb_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:text="Profile name"
                android:layout_marginLeft="15dp"
                fontPath="fonts/Montserrat-Regular.ttf"
                android:textColor="@color/Black_nb" />

        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bordercustom"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:layout_marginLeft="0dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="0dp"
            android:id="@+id/tv_nb_inbox"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:textSize="14dp"
            android:textColor="@color/Black_nb"/>

        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/notification_nb_inbox"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="8dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical">

        </com.nex3z.notificationbadge.NotificationBadge>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyBG"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/listBg">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_nb_active_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="Active Task"
            android:textSize="14dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bordercustom"></FrameLayout>

        <TextView
            android:id="@+id/textView_nb_my_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textSize="12dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:text="My Services"
            android:textColor="@color/Black_nb" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bordercustom"></FrameLayout>

        <TextView
            android:id="@+id/textView_nb_my_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textSize="14dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:text="My Account"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bordercustom"></FrameLayout>

        <TextView
            android:id="@+id/textView_nb_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:textSize="14dp"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:text="Sign Out"
            android:textColor="@color/Black_nb" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bordercustom"></FrameLayout>

    </LinearLayout>


</LinearLayout>
